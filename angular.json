{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "src",
  "projects": {
    "dev": {
      "root": "src/dev",
      "projectType": "application",
      "sourceRoot": "src/dev/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "customWebpackConfig": {
              "path": "src/dev/custom-webpack.config.js",
              "mergeStrategies": {
                "externals": "replace"
              }
            },
            "outputPath": "dist/dev",
            "index": "src/dev/src/index.html",
            "main": "src/dev/src/main.ts",
            "polyfills": "src/dev/src/polyfills.ts",
            "tsConfig": "src/dev/tsconfig.app.json",
            "aot": true,
            "assets": [
              {
                "glob": "favicon.ico",
                "input": "src/dev/src",
                "output": "/"
              },
              {
                "glob": "**/*",
                "input": "src/dev/src/assets",
                "output": "/assets"
              }
            ],
            "styles": [
              "src/clr-angular/main.scss",
              "packages/icons/src/clr-icons.scss",
              "src/dev/src/styles.scss",
              "node_modules/@ng-select/ng-select/themes/default.theme.css"
            ],
            "scripts": [
              "node_modules/@webcomponents/webcomponentsjs/custom-elements-es5-adapter.js",
              "node_modules/@webcomponents/webcomponentsjs/webcomponents-bundle.js"
            ]
          },
          "configurations": {
            "production": {
              "tsConfig": "src/dev/tsconfig.prod.json",
              "styles": ["dist/clr-ui/clr-ui.min.css", "dist/clr-icons/clr-icons.min.css"],
              "fileReplacements": [
                {
                  "replace": "src/dev/src/environments/environment.ts",
                  "with": "src/dev/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true
            },
            "dark": {
              "styles": [
                "src/clr-angular/dark-theme.scss",
                "packages/icons/src/clr-icons.scss",
                "src/dev/src/styles.scss"
              ],
              "fileReplacements": [
                {
                  "replace": "src/dev/src/environments/environment.ts",
                  "with": "src/dev/src/environments/environment.dark.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "options": {
            "customWebpackConfig": {
              "path": "src/dev/custom-webpack.config.js",
              "mergeStrategies": {
                "externals": "replace"
              }
            },
            "browserTarget": "dev:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "dev:build:production"
            },
            "dark": {
              "browserTarget": "dev:build:dark"
            }
          }
        }
      }
    },
    "clr-angular": {
      "projectType": "library",
      "root": "src",
      "sourceRoot": "src/clr-angular/src",
      "prefix": "clr",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "src/clr-angular/tsconfig.lib.json",
            "project": "src/clr-angular/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "src/clr-angular/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "styles": ["src/clr-angular/main.scss"],
            "main": "src/clr-angular/test.ts",
            "tsConfig": "src/clr-angular/tsconfig.spec.json",
            "karmaConfig": "src/clr-angular/karma.conf.js",
            "codeCoverageExclude": ["packages/core/**/*.ts"]
          }
        }
      }
    },
    "website": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "skipTests": true
        }
      },
      "root": "src/website",
      "sourceRoot": "src/website/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/website",
            "index": "src/website/src/index.html",
            "main": "src/website/src/main.ts",
            "polyfills": "src/website/src/polyfills.ts",
            "tsConfig": "src/website/tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/website/src/favicon.ico",
              "src/website/src/manifest.json",
              "src/website/src/sitemap.xml",
              "src/website/src/robots.txt",
              {
                "glob": "versions.json",
                "input": "src/website/src/settings/",
                "output": "/"
              },
              "src/website/src/assets"
            ],
            "styles": [
              "node_modules/prismjs/themes/prism-solarizedlight.css",
              "src/clr-angular/main.scss",
              "packages/icons/src/clr-icons.scss",
              "src/website/src/styles/main.scss"
            ],
            "scripts": [
              "node_modules/prismjs/prism.js",
              "node_modules/prismjs/components/prism-typescript.min.js",
              "node_modules/@webcomponents/custom-elements/custom-elements.min.js"
            ]
          },
          "configurations": {
            "production": {
              "styles": [
                "node_modules/prismjs/themes/prism-solarizedlight.css",
                "dist/clr-ui/clr-ui.min.css",
                "dist/clr-icons/clr-icons.min.css",
                "src/website/src/styles/main.scss"
              ],
              "tsConfig": "src/website/tsconfig.prod.json",
              "fileReplacements": [
                {
                  "replace": "src/website/src/environments/environment.ts",
                  "with": "src/website/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "3mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "website:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "website:build:production"
            }
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "defaultProject": "dev",
  "cli": {
    "analytics": false
  }
}
