{
  "name": "clarity",
  "version": "0.12.0-rc.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vmware/clarity.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "npm run generate-release-notes && ng serve",
    "start:dynamic": "npm run build:dynamic && npm run serve:dynamic",
    "start:static": "npm run build:static && npm run serve:static",
    "build": "ng build",
    "build:client-and-server-bundles": "ng build --prod && ng run clarity:server",
    "build:static": "npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:static",
    "build:dynamic": "npm run build:client-and-server-bundles && npm run webpack:server",
    "generate:static": "cd dist && node prerender",
    "generate:deploy": "cd dist && node prerender --deploy",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:static": "cd dist/browser && http-server",
    "serve:dynamic": "node dist/server",
    "generate-release-notes": "node generate-template.js",
    "generate-404": "cat dist/index.html > dist/404.html",
    "deploy": "npm run generate-release-notes && npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:deploy",
    "deploy:ci": "npm run generate-release-notes && npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:deploy -- --directory=../../deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.4",
    "@angular/common": "^6.0.4",
    "@angular/compiler": "^6.0.4",
    "@angular/core": "^6.0.4",
    "@angular/forms": "^6.0.4",
    "@angular/http": "^6.0.4",
    "@angular/platform-browser": "^6.0.4",
    "@angular/platform-browser-dynamic": "^6.0.4",
    "@angular/platform-server": "^6.0.4",
    "@angular/router": "^6.0.4",
    "@clr/angular": "^0.12.0-rc.2",
    "@clr/icons": "^0.12.0-rc.2",
    "@clr/ui": "^0.12.0-rc.2",
    "@webcomponents/custom-elements": "^1.0.4",
    "bootstrap": "^4.0.0-alpha.5",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.5.7",
    "intl": "^1.2.5",
    "jump.js": "^1.0.2",
    "prismjs": "^1.8.3",
    "rxjs": "^6.2.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.6.8",
    "@angular/cli": "6.0.7",
    "@angular/compiler-cli": "^6.0.4",
    "@angular/language-service": "^6.0.4",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "@types/node": "^8.0.30",
    "cpy-cli": "^1.0.1",
    "del": "^3.0.0",
    "fs-extra": "^5.0.0",
    "gh-pages": "^1.1.0",
    "http-server": "^0.10.0",
    "make-dir": "^1.1.0",
    "minimist": "^1.2.0",
    "ora": "^1.3.0",
    "raw-loader": "^0.5.1",
    "reflect-metadata": "^0.1.10",
    "replace-in-file": "^3.1.0",
    "ts-loader": "^4.3.1",
    "typescript": "2.7.2",
    "webpack-cli": "^3.0.2",
    "xml-js": "^1.5.2"
  }
}
