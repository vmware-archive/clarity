{
  "name": "@clr/clarity",
  "version": "3.1.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "clean": "del ./dist",
    "start": "npm run angular:dev:start",
    "build": "npm-run-all build:ci",
    "build:ci": "npm-run-all clean format lint build:libs core:dev:build test",
    "build:libs": "npm-run-all -p ui:build icons:build core:build -s angular:build schematics:build",
    "build:apps": "npm-run-all -p angular:dev:build core:dev:build",
    "test": "npm-run-all -p angular:test core:test icons:test",
    "test:a11y": "node scripts/axe",
    "lint": "npm-run-all core:lint angular:lint",
    "prelint": "npm link ./scripts/eslint-plugin-clarity",
    "lint:fix": "npm-run-all core:lint:fix angular:lint:fix",
    "license:fix": "node scripts/update-license",
    "ngcc:check": "node scripts/ngcc-check",
    "ngcc:fix": "node scripts/ngcc-clean",
    "lock:check": "node scripts/lock-check",
    "lock:fix": "node scripts/lock-fix",
    "format": "prettier --list-different './**/*.{js,json,md,ts,scss}'",
    "format:fix": "pretty-quick --staged",
    "format:file": "prettier --write .",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "publish:prepare": "npm-run-all clean ngcc:fix build:libs",
    "publish:latest": "npm run publish:prepare; npm run ngcc:fix; npm run angular:build:package; npm run core:build:package; npm publish dist/core; npm publish dist/clr-ui; npm publish dist/clr-angular; npm publish dist/clr-icons",
    "publish:next": "npm run publish:prepare; npm publish dist/core --tag next; npm publish dist/clr-ui --tag next; npm publish dist/clr-angular --tag next; npm publish dist/clr-icons --tag next",
    "publish:rc": "npm run publish:prepare; npm publish dist/core --tag rc; npm publish dist/clr-ui --tag rc; npm publish dist/clr-angular --tag rc; npm publish dist/clr-icons --tag rc",
    "publish:local": "npm run publish:prepare; npm publish dist/core --registry http://localhost:4873; npm publish dist/clr-ui --registry http://localhost:4873; npm publish dist/clr-angular --registry http://localhost:4873; npm publish dist/clr-icons --registry http://localhost:4873",
    "angular:build": "npm --prefix packages/angular run build",
    "angular:test": "npm --prefix packages/angular run test",
    "angular:test:watch": "npm --prefix packages/angular run test:watch",
    "angular:lint": "npm --prefix packages/angular run lint",
    "angular:dev:start": "npm --prefix packages/angular run start",
    "angular:dev:build": "npm --prefix packages/angular run dev",
    "angular:dev:build:dark": "npm --prefix packages/angular run dev:dark",
    "angular:dev:serve": "npm --prefix packages/angular run serve",
    "angular:dev:serve:dark": "npm --prefix packages/angular run serve:dark",
    "angular:dev:deploy": "./scripts/dev.sh",
    "schematics:build": "npm --prefix packages/schematics run build",
    "website:start": "npm run core:build && npm run website:news && ng serve website",
    "website:build": "npm run website:news && ng build website --prod --progress=false && npm run website:storybook",
    "website:storybook": "mkdir -p dist/website/storybook && cp -rf dist/storybook/core dist/website/storybook",
    "website:deploy": "./scripts/website.sh",
    "website:404": "cpy --rename 404.html dist/website/index.html dist/website",
    "website:functions": "netlify-lambda build scripts/netlify",
    "website:news": "node src/website/generate-news",
    "website:render": "npm-run-all build:libs core:dev:build website:build website:functions website:404",
    "website:preview": "lite-server --core=dist/website",
    "icons:build": "npm --prefix packages/icons run build",
    "icons:test": "npm --prefix packages/icons run test",
    "icons:test:watch": "npm --prefix packages/icons run test:watch",
    "ui:build": "npm --prefix packages/ui run build",
    "core:start": "npm --prefix packages/core run start",
    "core:build": "npm --prefix packages/core run build",
    "core:test": "npm --prefix packages/core run test",
    "core:test:watch": "npm --prefix packages/core run test:watch",
    "core:lint": "npm --prefix packages/core run lint",
    "core:dev:build": "npm --prefix packages/core run dev:build"
  },
  "dependencies": {},
  "optionalDependencies": {
    "cypress": "3.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "cheerio": "1.0.0-rc.2",
    "conventional-changelog-cli": "2.0.23",
    "cpy-cli": "3.0.0",
    "cross-env": "5.2.0",
    "del-cli": "1.1.0",
    "detect-browser": "4.1.0",
    "dotenv": "8.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-jasmine": "4.1.0",
    "fs-extra": "8.1.0",
    "husky": "1.3.1",
    "lite-server": "2.5.4",
    "netlify-cli": "2.25.0",
    "netlify-lambda": "1.4.5",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "pretty-quick": "1.11.0",
    "replace": "1.1.0",
    "shelljs": "0.8.3",
    "source-map": "0.7.3",
    "stylelint": "10.0.1",
    "stylelint-config-recommended": "2.2.0",
    "stylelint-declaration-use-variable": "1.7.0",
    "stylelint-no-px": "0.12.1",
    "stylelint-scss": "3.9.2",
    "superagent": "5.1.0",
    "ts-node": "8.2.0",
    "typescript": "3.7.5"
  },
  "engines": {
    "node": ">=10.9.0 <11.0.0",
    "npm": ">=5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:fix && npm run ngcc:check && npm run license:fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
