{
  "name": "clarity",
  "version": "3.1.0",
  "private": true,
  "workspaces": {
    "packages": ["packages/*", "apps/*"],
    "nohoist": [
      "core/css-vars-ponyfill",
      "core/tslib",
      "core/lit-element",
      "core/ramda",
      "core/lit-html",
      "core/@storybook/**",
      "core/normalize.css",
      "angular/@storybook/**"
    ]
  },
  "scripts": {
    "ng": "ng",
    "clean:modules": "del ./**/node_modules",
    "clean": "del ./dist",
    "start": "yarn angular:dev:start",
    "build": "npm-run-all build:ci",
    "build:ci": "npm-run-all clean format lint build:libs core:dev:build test",
    "build:libs": "npm-run-all -p ui:build icons:build core:build -s angular:build schematics:build",
    "build:apps": "npm-run-all -p angular:dev:build core:dev:build",
    "test": "npm-run-all -p angular:test core:test icons:test",
    "test:a11y": "node scripts/axe",
    "lint": "npm-run-all core:lint angular:lint",
    "lint:fix": "npm-run-all core:lint:fix angular:lint:fix",
    "license:fix": "node scripts/update-license",
    "ngcc:check": "node scripts/ngcc-check",
    "ngcc:fix": "node scripts/ngcc-clean",
    "lock:check": "node scripts/lock-check",
    "lock:fix": "node scripts/lock-fix",
    "format": "prettier --list-different './**/*.{js,json,md,ts,scss}'",
    "format:fix": "pretty-quick --staged",
    "format:file": "prettier --write .",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "publish:prepare": "npm-run-all clean ngcc:fix build:libs",
    "publish:latest": "yarn publish:prepare; yarn ngcc:fix; yarn angular:build:package; yarn core:build:package; yarn publish dist/core; yarn publish dist/clr-ui; yarn publish dist/clr-angular; yarn publish dist/clr-icons",
    "publish:next": "yarn publish:prepare; yarn publish dist/core --tag next; yarn publish dist/clr-ui --tag next; yarn publish dist/clr-angular --tag next; yarn publish dist/clr-icons --tag next",
    "publish:rc": "yarn publish:prepare; yarn publish dist/core --tag rc; yarn publish dist/clr-ui --tag rc; yarn publish dist/clr-angular --tag rc; yarn publish dist/clr-icons --tag rc",
    "publish:local": "yarn publish:prepare; yarn publish dist/core --registry http://localhost:4873; yarn publish dist/clr-ui --registry http://localhost:4873; yarn publish dist/clr-angular --registry http://localhost:4873; yarn publish dist/clr-icons --registry http://localhost:4873",
    "angular:build": "yarn --cwd packages/angular run build",
    "angular:test": "yarn --cwd packages/angular run test",
    "angular:test:watch": "yarn --cwd packages/angular run test:watch",
    "angular:lint": "yarn --cwd packages/angular run lint",
    "angular:dev:start": "yarn --cwd packages/angular run start",
    "angular:dev:build": "yarn --cwd packages/angular run dev",
    "angular:dev:build:dark": "yarn --cwd packages/angular run dev:dark",
    "angular:dev:serve": "yarn --cwd packages/angular run serve",
    "angular:dev:serve:dark": "yarn --cwd packages/angular run serve:dark",
    "angular:dev:deploy": "./scripts/dev.sh",
    "schematics:build": "yarn --cwd packages/schematics run build",
    "icons:build": "yarn --cwd packages/icons run build",
    "icons:test": "yarn --cwd packages/icons run test",
    "icons:test:watch": "yarn --cwd packages/icons run test:watch",
    "ui:build": "yarn --cwd packages/ui run build",
    "core:start": "yarn --cwd packages/core run start",
    "core:build": "yarn --cwd packages/core run build",
    "core:test": "yarn --cwd packages/core run test",
    "core:test:watch": "yarn --cwd packages/core run test:watch",
    "core:lint": "yarn --cwd packages/core run lint",
    "core:dev:build": "yarn --cwd packages/core run dev:build"
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "cheerio": "1.0.0-rc.2",
    "conventional-changelog-cli": "2.0.23",
    "cpy-cli": "3.0.0",
    "cross-env": "5.2.0",
    "del-cli": "1.1.0",
    "detect-browser": "4.1.0",
    "dotenv": "8.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-jasmine": "4.1.0",
    "fs-extra": "8.1.0",
    "husky": "1.3.1",
    "lite-server": "2.5.4",
    "netlify-cli": "2.25.0",
    "netlify-lambda": "1.4.5",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "pretty-quick": "1.11.0",
    "replace": "1.1.0",
    "shelljs": "0.8.3",
    "source-map": "0.7.3",
    "stylelint": "10.0.1",
    "stylelint-config-recommended": "2.2.0",
    "stylelint-declaration-use-variable": "1.7.0",
    "stylelint-no-px": "0.12.1",
    "stylelint-scss": "3.9.2",
    "superagent": "5.1.0",
    "ts-node": "8.2.0",
    "typescript": "3.7.5"
  },
  "engines": {
    "node": ">=12 <13",
    "yarn": ">=1.22.4 <2",
    "npm": "     PLEASE USE YARN     "
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format:fix && yarn license:fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
