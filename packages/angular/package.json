{
  "name": "angular",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "ng build clr-angular --watch",
    "start:dev": "ng build clr-angular --watch --configuration=production",
    "start:storybook": "stmux -w always -e ERROR -m beep,system [ \"yarn start:dev\" : \"sleep 25 && yarn storybook\" : \"yarn --cwd ../ui run build:watch\" ]",
    "serve": "npm-run-all -p serve:watch sass:watch",
    "serve:watch": "ng serve dev",
    "serve:dark": "ng serve dev -c dark",
    "start:stmux:dev": "stmux -w always -e ERROR -m beep,system [ \"yarn start:dev\" : \"sleep 25 && yarn serve:watch\" : \"yarn --cwd ../ui run build:watch\" ]",
    "storybook": "start-storybook -s .storybook/public -p 6006",
    "storybook:build": "build-storybook -s .storybook/public -c .storybook -o ../../dist/website/storybook/angular --quiet",
    "build": "npm-run-all build:lib:cds build:lib:clr build:update:cds build:update:clr",
    "build:preinstall": "yarn run build:preinstall:cds && yarn run build:preinstall:clr",
    "build:preinstall:cds": "mkdir -p ../../dist/angular/ && cp ./projects/cds-angular/package.json ../../dist/angular/",
    "build:preinstall:clr": "mkdir -p ../../dist/clr-angular/ && cp ./projects/clr-angular/package.json ../../dist/clr-angular/",
    "build:update:clr": "node ../../scripts/update-local-packages.js /packages/angular/dist/clr-angular/package.json",
    "build:update:cds": "node ../../scripts/update-local-packages.js /packages/angular/dist/angular/package.json",
    "build:lib:clr": "ng build clr-angular --configuration=production",
    "build:lib:cds": "yarn run generate:core-ng-modules && ng build cds-angular --configuration=production",
    "generate:core-ng-modules": "node ../../scripts/core-ng-module-generator && prettier --write ./projects/cds-angular/src/cds",
    "dev": "ng build dev --configuration=production --progress=false",
    "dev:dark": "ng build dev -c dark --configuration=production --progress=false",
    "test": "npm-run-all test:unit:clr test:unit:cds test:golden",
    "test:unit:clr": "ng test clr-angular --watch false --source-map=false",
    "test:unit:cds": "ng test cds-angular --watch false  --source-map=false",
    "test:unit:coverage": "ng test clr-angular --watch false --code-coverage",
    "pretest:golden": "ts-api-guardian --out ./dist/golden/clr-angular.d.ts --stripExportPattern '^Çlr' --allowModuleIdentifiers 'i0' ./dist/clr-angular/index.d.ts",
    "test:golden": "diff -u golden/clr-angular.d.ts ./dist/golden/clr-angular.d.ts",
    "test:watch": "ng test clr-angular --watch",
    "test:watch:coverage": "ng test clr-angular --watch --code-coverage",
    "lint": "npm-run-all lint:ts lint:styles",
    "lint:ts": "eslint -c .eslintrc.js \"src/**/*.ts\" \"projects/**/*.ts\"",
    "lint:styles": "stylelint \"src/**/*.scss\" \"projects/**/*.scss\"",
    "lint:fix": "eslint --fix -c .eslintrc.js \"src/**/*.ts\" \"projects/**/*.ts\" && stylelint --fix \"src/**/*.scss\" \"projects/**/*.scss\"",
    "golden:fix": "yarn run build:lib:clr && ts-api-guardian --out golden/clr-angular.d.ts --stripExportPattern '^Çlr' --allowModuleIdentifiers 'i0' ./dist/clr-angular/index.d.ts",
    "sass:watch": "yarn --cwd ../ui run build:watch"
  },
  "dependencies": {
    "@angular/animations": "12.0.2",
    "@angular/common": "12.0.2",
    "@angular/compiler": "12.0.2",
    "@angular/core": "12.0.2",
    "@angular/forms": "12.0.2",
    "@angular/platform-browser": "12.0.2",
    "@angular/platform-browser-dynamic": "12.0.2",
    "@angular/router": "12.0.2",
    "@cds/core": "./dist/core",
    "@cds/angular": "./dist/angular",
    "@clr/angular": "./dist/clr-angular",
    "@clr/icons": "./dist/clr-icons",
    "@clr/ui": "./dist/clr-ui",
    "css-vars-ponyfill": "2.3.1",
    "rxjs": "6.5.4",
    "tslib": "^2.2.0",
    "zone.js": "0.11.4",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "12.0.2",
    "@angular-devkit/build-ng-packagr": "0.1002.0",
    "@angular/cli": "12.0.2",
    "@angular/compiler-cli": "12.0.2",
    "@angular/language-service": "12.0.2",
    "@babel/core": "7.9.6",
    "@storybook/addon-actions": "6.0.21",
    "@storybook/addon-cssresources": "6.0.21",
    "@storybook/addon-knobs": "6.0.21",
    "@storybook/addon-links": "6.0.21",
    "@storybook/addons": "6.0.21",
    "@storybook/angular": "6.0.21",
    "@storybook/cli": "6.0.21",
    "@storybook/theming": "6.0.21",
    "@types/jasmine": "3.4.6",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "12.11.1",
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "babel-loader": "8.1.0",
    "chokidar-cli": "2.1.0",
    "codelyzer": "5.1.2",
    "cpy-cli": "3.1.0",
    "csso-cli": "3.0.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jasmine": "4.1.1",
    "eslint-plugin-unused-imports": "0.1.3",
    "jasmine": "3.5.0",
    "jasmine-core": "~3.5.0",
    "jasmine-expect": "4.0.3",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~3.3.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-notify-reporter": "1.2.0",
    "karma-parallel": "0.3.1",
    "lit": "2.0.0-rc.2",
    "ng-packagr": "12.0.2",
    "npm-run-all": "4.1.5",
    "postcss-cli": "8.1.0",
    "prettier": "2.0.5",
    "replace": "1.2.0",
    "shx": "0.3.2",
    "stmux": "1.8.0",
    "stylelint": "13.3.3",
    "ts-api-guardian": "0.6.0",
    "ts-node": "8.3.0",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "typescript": "4.2.4"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead",
    "IE 11",
    "not IE 9-10"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
