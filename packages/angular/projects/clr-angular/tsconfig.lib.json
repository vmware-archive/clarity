{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "inlineSources": true,
    "types": [],
    "lib": ["dom", "es2018"],
    "paths": {
      "@clr/core": ["./dist/core"],
      "@clr/core/*": ["./dist/core/*"],
      "@clr/icons": ["./dist/clr-icons"],
      "@clr/icons/*": ["./dist/clr-icons/*"],
      "@clr/angular": ["./dist/clr-angular"],
      "@clr/angular/*": ["./dist/clr-angular/*"]
    }
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "exclude": ["src/test.ts", "**/*.spec.ts"]
}
