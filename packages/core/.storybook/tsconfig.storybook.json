{
  "include": ["../**/*.stories.ts", "../docs/**/*", "../dist"],
  "exclude": ["node_modules", "../**/test/*.ts", "../**/*.spec.ts", "../build/**/*.ts"],
  "compilerOptions": {
    "rootDirs": ["src", "docs"],
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "../",
    "paths": {
      "@clr/core": ["./dist/core"],
      "@clr/core/*": ["./dist/core/*"],
      "@clr/core/*/register": ["./dist/core/*/register"]
    }
  }
}
