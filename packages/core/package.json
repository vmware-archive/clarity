{
  "name": "@cds/core",
  "version": "0.0.0",
  "scripts": {
    "clean": "del ./dist",
    "start": "npm-run-all build -p build:watch storybook:start",
    "sandbox": "web-dev-server -c web-dev-server.sandbox.mjs",
    "build": "npm-run-all -s clean build:tokens build:lib build:update",
    "test": "npm-run-all -s test:unit test:performance",
    "lint": "eslint \"**/*.ts\" --ignore-pattern \"dist\" && stylelint \"./**/*.scss\" && lit-analyzer ./src",
    "storybook:start": "wds -c ./web-dev-server.storybook.mjs",
    "storybook:build": "build-storybook --config-dir .storybook --output-dir ../../dist/storybook",
    "lint:fix": "eslint --fix \"./**/*.ts\" && stylelint --fix \"./**/*.scss\"",
    "test:watch": "wtr --watch",
    "test:unit": "wtr",
    "test:unit:coverage": "wtr --coverage",
    "test:performance": "wtr --config ./web-test-runner.performance.mjs",
    "build:watch": "npm-run-all 'build:lib --watch'",
    "build:lib": "rollup --config ./rollup.config.js",
    "build:tokens": "cd build && ts-node ./build.tokens.ts",
    "build:preinstall": "mkdir -p ../../dist/core/ && cp ./package.json ../../dist/core/",
    "build:update": "node ../../scripts/update-local-packages.js /packages/core/dist/core/package.json",
    "postinstall": "patch-package"
  },
  "customElements": "dist/core/custom-elements.json",
  "sideEffects": [
    "src/**/*.register.js"
  ],
  "files": [
    "*"
  ],
  "keywords": [
    "web component",
    "design system",
    "clarity",
    "ui"
  ],
  "description": "Clarity Design System Web Components",
  "homepage": "https://clarity.design",
  "repository": {
    "type": "git",
    "url": "https://github.com/vmware/clarity.git"
  },
  "author": "clarity",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vmware/clarity/issues"
  },
  "dependencies": {
    "lit": "2.0.0-rc.2",
    "ramda": "^0.27.1",
    "tslib": "^2.2.0"
  },
  "optionalDependencies": {
    "@cds/city": "^1.1.0",
    "@types/resize-observer-browser": "^0.1.5",
    "modern-normalize": "1.1.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "0.5.7",
    "@fullhuman/postcss-purgecss": "4.0.3",
    "@open-wc/dev-server-hmr": "0.1.2-next.0",
    "@rollup/plugin-alias": "3.1.2",
    "@rollup/plugin-image": "2.0.6",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.0",
    "@rollup/plugin-replace": "2.4.2",
    "@rollup/plugin-typescript": "8.2.1",
    "@rollup/plugin-virtual": "2.0.3",
    "@skypack/package-check": "0.2.2",
    "@types/jasmine": "3.3.13",
    "@types/jasmine-expect": "3.8.1",
    "@types/jasmine-matchers": "0.2.32",
    "@types/jasminewd2": "2.0.6",
    "@types/node": "^12.11.1",
    "@types/ramda": "0.27.11",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "@web/dev-server": "0.1.17",
    "@web/dev-server-esbuild": "0.2.12",
    "@web/dev-server-import-maps": "^0.0.5",
    "@web/dev-server-rollup": "0.3.4",
    "@web/dev-server-storybook": "0.3.5",
    "@web/storybook-prebuilt": "0.1.20",
    "@web/test-runner": "0.13.4",
    "@web/test-runner-playwright": "0.8.6",
    "autoprefixer": "10.2.5",
    "browserslist": "4.16.6",
    "bundlesize": "1.0.0-beta.2",
    "cem-plugin-readonly": "0.0.2",
    "cem-plugin-module-file-extensions": "0.0.2",
    "csso": "4.2.0",
    "custom-elements-hmr-polyfill": "1.0.3",
    "del-cli": "1.1.0",
    "eslint": "8.3.0",
    "eslint-plugin-lit": "1.6.1",
    "eslint-plugin-lit-a11y": "2.2.0",
    "eslint-plugin-wc": "1.3.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jasmine": "4.1.3",
    "fs-extra": "8.1.0",
    "glob": "7.2.0",
    "jasmine": "3.7.0",
    "lit-analyzer": "1.2.1",
    "npm-run-all": "4.1.5",
    "patch-package": "6.4.7",
    "playwright": "1.11.1",
    "purgecss": "4.0.3",
    "replace": "1.2.0",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-delete": "2.0.0",
    "rollup-plugin-minify-html-literals": "1.2.6",
    "rollup-plugin-postcss": "4.0.0",
    "rollup-plugin-shell": "1.0.3",
    "rollup-plugin-styles": "3.14.1",
    "rollup-plugin-sourcemaps": "0.6.3",
    "rollup-plugin-terser": "7.0.2",
    "sass": "1.26.10",
    "source-map-explorer": "2.5.2",
    "stylelint": "10.0.1",
    "stylelint-config-recommended": "2.2.0",
    "stylelint-declaration-use-variable": "1.7.0",
    "stylelint-no-px": "0.12.1",
    "stylelint-scss": "3.9.2",
    "ts-lit-plugin": "1.2.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.4.2",
    "web-component-analyzer": "1.2.0-next.0",
    "web-test-runner-performance": "^0.1.4"
  }
}
