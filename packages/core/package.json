{
  "name": "@clr/core",
  "version": "4.0.0-rc.0",
  "scripts": {
    "start": "npm-run-all build -p build:watch storybook",
    "storybook": "start-storybook -s .storybook/public -p 6006 --config-dir=.storybook",
    "dev:build": "build-storybook -s .storybook/public -c .storybook -o dist/storybook/core --quiet",
    "lint": "eslint \"**/*.ts\" --ignore-pattern \"dist\" && stylelint \"./**/*.scss\"",
    "lint:fix": "eslint --fix \"./**/*.ts\" && stylelint --fix \"./**/*.scss\"",
    "golden": "yarn build:api",
    "golden:fix": "yarn golden && cpy ./../dist/core/custom-elements.json ./",
    "golden:test": "diff -u ./custom-elements.json ./dist/core/custom-elements.json",
    "test": "npm-run-all -s test:unit test:treeshaking",
    "test:watch": "yarn test:karma -- --auto-watch=true --single-run=false --coverage=false",
    "test:unit": "npm-run-all -s build:ts:spec test:karma build:sass:min build:package",
    "test:karma": "karma start ./karma.conf.js",
    "test:treeshaking": "webpack --config ./test-bundles/webpack.config.js && bundlesize --config ./test-bundles/bundlesize.json",
    "test:bundles": "source-map-explorer dist/test-bundles/webpack.bundle.js",
    "build": "npm-run-all -s build:tokens build:sass build:ts build:sass:min build:package build:api build:copy",
    "build:watch": "npm-run-all -p build:sass:watch build:ts:watch",
    "build:package": "cpy '**/package.json' '../dist/core/' --cwd=./src --parents && cpy ./package.json ./dist/core/ && cpy ./README.md ./dist/core/; replace '@VERSION' $npm_package_version ./dist/core/internal/utils/global.js && node ./package.js",
    "build:ts": "tsc --b ./tsconfig.project.json --force",
    "build:ts:watch": "del ./dist/*.tsbuildinfo && tsc --p ./tsconfig.spec.json -w",
    "build:ts:spec": "tsc --b ./tsconfig.spec.json --force",
    "build:src": "npm-run-all build:sass:components build:ts",
    "prebuild:api": "cd dist/core && yarn link && yarn link @clr/core",
    "build:api": "wca analyze './dist/core/**/*.ts' --silent --format=json --outFile ./dist/core/custom-elements.json",
    "postbuild:api": "cd dist/core && yarn unlink @clr/core && yarn unlink --no-save @clr/core",
    "build:tokens": "node ./tokens-build.js",
    "build:sass": "npm-run-all 'build:sass:modules' -p 'build:sass:components'",
    "build:sass:min": "node ./package-css.js",
    "build:sass:watch": "npm-run-all 'build:sass' -p 'build:sass:components -- -w' 'build:sass:modules -- --watch'",
    "build:sass:modules": "sass --no-source-map ./src/styles:./dist/core/styles ./src/styles/global.scss:./dist/core/global.css ./src/list:./dist/core/list",
    "build:sass:components": "sass-render --q --suffix '.css.ts' -t ./sass-template.js './**/*.element.scss' './**/*.global.scss'",
    "build:copy": "cpy './core' '../../../dist' --cwd=./dist --parents"
  },
  "description": "Clarity Design System Web Components",
  "homepage": "https://clarity.design",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:vmware/clarity.git"
  },
  "dependencies": {
    "css-vars-ponyfill": "^2.3.1",
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1",
    "ramda": "^0.26.1",
    "tslib": "^2.0.0"
  },
  "optionalDependencies": {
    "@clr/city": "^1.1.0",
    "@webcomponents/shadycss": "^1.9.6",
    "@webcomponents/custom-elements": "^1.4.1",
    "@webcomponents/webcomponentsjs": "^2.4.3",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@open-wc/karma-esm": "2.13.23",
    "@storybook/addon-a11y": "6.0.0-rc.0",
    "@storybook/addon-actions": "6.0.0-rc.0",
    "@storybook/addon-backgrounds": "6.0.0-rc.0",
    "@storybook/addon-controls": "6.0.0-rc.0",
    "@storybook/addon-cssresources": "6.0.0-rc.0",
    "@storybook/addon-docs": "6.0.0-rc.0",
    "@storybook/addon-knobs": "6.0.0-rc.0",
    "@storybook/addon-links": "6.0.0-rc.0",
    "@storybook/addon-storysource": "6.0.0-rc.0",
    "@storybook/addon-viewport": "6.0.0-rc.0",
    "@storybook/addons": "6.0.0-rc.0",
    "@storybook/cli": "6.0.0-rc.0",
    "@storybook/web-components": "6.0.0-rc.0",
    "@types/jasmine": "3.3.13",
    "@types/jasmine-expect": "3.8.1",
    "@types/jasmine-matchers": "0.2.32",
    "@types/jasminewd2": "2.0.6",
    "@types/node": "^12.11.1",
    "@types/ramda": "0.26.1",
    "@types/resize-observer-browser": "^0.1.3",
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "bundlesize": "0.18.0",
    "cpy-cli": "3.1.0",
    "csso-cli": "3.0.0",
    "custom-elements-hmr-polyfill": "1.0.0",
    "del-cli": "1.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jasmine": "4.1.1",
    "fs-extra": "8.1.0",
    "karma": "4.4.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.5",
    "karma-htmlfile-reporter": "0.3.8",
    "karma-jasmine": "2.0.1",
    "karma-jasmine-html-reporter": "1.4.2",
    "npm-run-all": "4.1.5",
    "purgecss": "2.2.1",
    "replace": "1.2.0",
    "sass": "1.26.5",
    "storybook-addon-designs": "5.2.0",
    "stylelint": "10.0.1",
    "stylelint-config-recommended": "2.2.0",
    "stylelint-declaration-use-variable": "1.7.0",
    "stylelint-no-px": "0.12.1",
    "stylelint-scss": "3.9.2",
    "theo": "8.1.5",
    "ts-loader": "^7.0.4",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.9.2",
    "wc-sass-render": "1.2.3",
    "web-component-analyzer": "1.0.3",
    "webpack-cli": "3.3.11"
  },
  "author": "clarity",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vmware/clarity/issues"
  }
}