{
  "name": "@cds/core",
  "version": "0.0.0",
  "scripts": {
    "clean": "del ./dist/core",
    "start": "npm-run-all build -p build:watch storybook:start",
    "sandbox": "web-dev-server -c web-dev-server.sandbox.mjs",
    "build": "npm-run-all -s clean build:tokens build:lib build:update",
    "test": "npm-run-all test:unit test:performance",
    "lint": "eslint \"src/**/*.ts\" --ignore-pattern \"dist\" && stylelint --config \"./stylelint.config.js\" \"./**/*.scss\" && lit-analyzer ./src",
    "storybook:start": "wds -c ./web-dev-server.storybook.mjs",
    "storybook:build": "build-storybook --config-dir .storybook --output-dir ../../dist/website/storybook/core",
    "lint:fix": "eslint --fix \"./**/*.ts\" && stylelint --fix \"./**/*.scss\"",
    "test:watch": "wtr --watch",
    "test:unit": "del ./dist/coverage && wtr",
    "test:unit:coverage": "del ./dist/coverage && wtr --coverage",
    "test:a11y": "wtr --config ./web-test-runner.a11y.mjs",
    "test:performance": "wtr --config ./web-test-runner.performance.mjs",
    "build:watch": "npm-run-all 'build:lib --watch'",
    "build:lib": "rollup --config ./rollup.config.js",
    "build:tokens": "cd build && ts-node ./build.tokens.ts",
    "build:preinstall": "mkdir -p ../../dist/core/ && cp ./package.json ../../dist/core/",
    "build:update": "node ../../scripts/update-local-packages.js /packages/core/dist/core/package.json"
  },
  "customElements": "dist/core/custom-elements.json",
  "sideEffects": [
    "src/**/*.register.js"
  ],
  "files": [
    "*"
  ],
  "keywords": [
    "web component",
    "design system",
    "clarity",
    "ui"
  ],
  "description": "Clarity Design System - common components, themes, and utilties",
  "homepage": "https://clarity.design",
  "repository": {
    "type": "git",
    "url": "https://github.com/vmware/clarity.git"
  },
  "author": "clarity",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vmware/clarity/issues"
  },
  "dependencies": {
    "lit": "^2.1.3",
    "ramda": "^0.28.0",
    "tslib": "^2.3.1"
  },
  "optionalDependencies": {
    "@cds/city": "^1.1.0",
    "modern-normalize": "1.1.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.0.0",
    "@custom-elements-manifest/analyzer": "0.5.7",
    "@open-wc/dev-server-hmr": "0.1.2",
    "@rollup/plugin-alias": "3.1.9",
    "@rollup/plugin-image": "2.1.1",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-replace": "3.0.1",
    "@rollup/plugin-typescript": "8.3.0",
    "@rollup/plugin-virtual": "2.0.3",
    "@skypack/package-check": "0.2.2",
    "@types/jasmine": "3.10.3",
    "@types/jasmine-expect": "3.8.1",
    "@types/jasmine-matchers": "0.2.32",
    "@types/node": "14.17.34",
    "@types/ramda": "0.27.11",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "@web/dev-server": "0.1.29",
    "@web/dev-server-esbuild": "0.2.16",
    "@web/dev-server-import-maps": "0.0.6",
    "@web/dev-server-rollup": "0.3.15",
    "@web/dev-server-storybook": "0.4.2",
    "@web/test-runner": "0.13.26",
    "@web/test-runner-commands": "0.6.1",
    "@web/test-runner-playwright": "0.8.8",
    "autoprefixer": "10.4.2",
    "browserslist": "4.19.1",
    "bundlesize": "1.0.0-beta.2",
    "cem-plugin-module-file-extensions": "0.0.2",
    "cem-plugin-readonly": "0.0.2",
    "csso": "5.0.2",
    "del-cli": "4.0.1",
    "eslint": "8.6.0",
    "eslint-plugin-lit": "1.6.1",
    "eslint-plugin-lit-a11y": "2.2.0",
    "eslint-plugin-wc": "1.3.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jasmine": "4.1.3",
    "eslint-plugin-rulesdir": "0.2.1",
    "fs-extra": "10.0.0",
    "glob": "7.2.0",
    "jasmine": "4.0.2",
    "lit-analyzer": "1.2.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.5",
    "playwright": "1.18.0",
    "purgecss": "4.1.3",
    "rollup": "2.64.0",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-delete": "2.0.0",
    "rollup-plugin-minify-html-literals": "1.2.6",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-shell": "1.0.3",
    "rollup-plugin-styles": "4.0.0",
    "rollup-plugin-sourcemaps": "0.6.3",
    "rollup-plugin-terser": "7.0.2",
    "sass": "1.48.0",
    "stylelint": "14.2.0",
    "stylelint-config-recommended": "6.0.0",
    "stylelint-declaration-use-variable": "1.7.3",
    "stylelint-no-px": "1.0.1",
    "stylelint-scss": "4.1.0",
    "terser": "5.10.0",
    "ts-lit-plugin": "1.2.1",
    "ts-node": "10.4.0",
    "typescript": "4.5.4",
    "web-test-runner-jasmine": "^0.0.1",
    "web-test-runner-performance": "^0.1.4",
    "web-test-runner-voiceover": "^0.0.7"
  }
}
