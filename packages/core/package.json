{
  "name": "@cds/core",
  "version": "5.1.1",
  "scripts": {
    "clean": "del ./dist",
    "start": "npm-run-all build -p build:watch storybook:start",
    "storybook:start": "start-storybook -s .storybook/public -p 6006 --config-dir=.storybook",
    "storybook:build": "build-storybook -s .storybook/public -c .storybook -o ../../dist/website/storybook/core --quiet",
    "lint": "eslint \"**/*.ts\" --ignore-pattern \"dist\" && stylelint \"./**/*.scss\" && lit-analyzer ./src",
    "lint:fix": "eslint --fix \"./**/*.ts\" && stylelint --fix \"./**/*.scss\"",
    "test": "npm-run-all -s test:unit test:performance test:package",
    "test:watch": "karma start ./karma.conf.js --auto-watch=true --single-run=false --coverage=false",
    "test:package": "yarn run package-check --cwd ./dist/core",
    "test:unit": "tsc --b ./tsconfig.spec.json --force && karma start ./karma.conf.js && yarn run build:package",
    "test:performance": "webpack --config ./test-bundles/webpack.config.js && bundlesize --config ./test-bundles/bundlesize.json",
    "test:bundles": "source-map-explorer dist/test-bundles/webpack.bundle.js",
    "build": "npm-run-all -s clean build:tokens build:sass build:ts build:package build:sass:optimize build:update",
    "build:preinstall": "mkdir -p ../../dist/core/ && cp ./package.json ../../dist/core/",
    "build:update": "node ../../scripts/update-local-packages.js /packages/core/dist/core/package.json",
    "build:watch": "npm-run-all -p build:sass:watch build:ts:watch",
    "build:package": "yarn run build:sass:optimize && cd build && ts-node ./build.package.ts",
    "build:ts": "tsc --b ./tsconfig.project.json --force",
    "build:ts:watch": "del ./dist/*.tsbuildinfo && tsc --p ./tsconfig.spec.json -w",
    "build:tokens": "cd build && ts-node ./build.tokens.ts",
    "build:sass": "npm-run-all build:sass:modules build:sass:components",
    "build:sass:optimize": "cd build && ts-node ./build.styles.ts",
    "build:sass:watch": "npm-run-all 'build:sass' -p 'build:sass:components -- -w' 'build:sass:modules -- --watch' & chokidar './dist/core/**/*.css' -c 'yarn run build:sass:optimize' -i './dist/core/**/*.min.css'",
    "build:sass:modules": "sass --no-source-map --load-path=./src ./src/styles:./dist/core/styles ./src/styles/global.scss:./dist/core/global.css ./src/list:./dist/core/list",
    "build:sass:components": "sass-render --q --suffix '.css.ts' -t ./build/sass-template.ts './**/*.element.scss' './**/*.global.scss'"
  },
  "files": [
    "*"
  ],
  "keywords": [
    "web component",
    "design system",
    "clarity",
    "ui"
  ],
  "description": "Clarity Design System Web Components",
  "homepage": "https://clarity.design",
  "repository": {
    "type": "git",
    "url": "https://github.com/vmware/clarity.git"
  },
  "author": "clarity",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vmware/clarity/issues"
  },
  "dependencies": {
    "@types/resize-observer-browser": "^0.1.3",
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1",
    "ramda": "^0.27.0",
    "tslib": "^2.0.0"
  },
  "optionalDependencies": {
    "@cds/city": "^1.1.0",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@open-wc/karma-esm": "2.16.17",
    "@skypack/package-check": "0.2.2",
    "@storybook/addon-essentials": "6.1.20",
    "@storybook/addon-knobs": "6.1.20",
    "@storybook/addon-storysource": "6.1.20",
    "@storybook/addons": "6.1.20",
    "@storybook/cli": "6.1.20",
    "@storybook/web-components": "6.1.20",
    "@types/jasmine": "3.3.13",
    "@types/jasmine-expect": "3.8.1",
    "@types/jasmine-matchers": "0.2.32",
    "@types/jasminewd2": "2.0.6",
    "@types/node": "^12.11.1",
    "@types/ramda": "0.27.11",
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "bundlesize": "1.0.0-beta.2",
    "chokidar-cli": "2.1.0",
    "cpy-cli": "3.1.0",
    "csso-cli": "3.0.0",
    "custom-elements-hmr-polyfill": "1.0.3",
    "del-cli": "1.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jasmine": "4.1.1",
    "fs-extra": "8.1.0",
    "karma": "6.2.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-htmlfile-reporter": "0.3.8",
    "karma-jasmine": "4.0.1",
    "karma-jasmine-html-reporter": "1.5.4",
    "lit-analyzer": "1.2.0",
    "npm-run-all": "4.1.5",
    "purgecss": "2.3.0",
    "replace": "1.2.0",
    "sass": "1.26.10",
    "storybook-addon-designs": "5.4.1",
    "stylelint": "10.0.1",
    "stylelint-config-recommended": "2.2.0",
    "stylelint-declaration-use-variable": "1.7.0",
    "stylelint-no-px": "0.12.1",
    "stylelint-scss": "3.9.2",
    "ts-lit-plugin": "1.2.0",
    "ts-loader": "^7.0.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^4.0.0",
    "wc-sass-render": "1.2.3",
    "web-component-analyzer": "1.1.6",
    "webpack-cli": "3.3.11",
    "webpack": "^4.0.0",
    "babel-loader": "^8.0.0",
    "style-loader": "^1.2.1",
    "css-loader": "^3.5.0"
  }
}