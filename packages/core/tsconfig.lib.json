{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [],
    "sourceMap": false,
    "strictNullChecks": true,
    "rootDir": "./src",
    "incremental": true,
    "isolatedModules": true,
    "noEmit": true,
    "tsBuildInfoFile": "./dist/core/.tsbuildinfo"
  },
  "allowSyntheticDefaultImports": false,
  "exclude": [
    "**/*.spec.ts",
    "**/*.a11y.ts",
    "**/*.performance.ts",
    "dist",
    "node_modules",
    "./storybook",
    "**/*.stories.ts",
    "**/*.story.ts",
    "./build"
  ]
}
