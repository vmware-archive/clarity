{
  "include": ["./**/*.stories.ts", "./docs/**/*", "./dist"],
  "exclude": [
    "node_modules",
    "./**/test/*.ts",
    "./**/*.spec.ts",
    "./**/*.a11y.ts",
    "./**/*.performance.ts",
    "./build/**/*.ts"
  ],
  "outDir": "../dist/website/storybook/core",
  "compilerOptions": {
    "rootDirs": ["src", "docs"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@cds/core": ["./dist/core"],
      "@cds/core/*": ["./dist/core/*"],
      "@cds/core/*/register": ["./dist/core/*/register"]
    }
  }
}
