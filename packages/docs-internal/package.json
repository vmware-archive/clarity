{
  "name": "docs-components",
  "version": "0.0.1",
  "license": "MIT",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/vmware/clarity.git"
  },
  "keywords": [
    "web component"
  ],
  "scripts": {
    "clean": "del ./dist",
    "start": "npm-run-all build -p build:watch storybook:start",
    "sandbox": "web-dev-server -c web-dev-server.sandbox.mjs",
    "build": "npm-run-all -s clean build:lib build:web",
    "lint": "eslint \"**/*.ts\" --ignore-pattern \"dist\" && stylelint \"./**/*.scss\" && lit-analyzer ./src",
    "storybook:start": "wds -c ./web-dev-server.storybook.mjs",
    "storybook:build": "build-storybook --config-dir .storybook --output-dir ./dist/storybook",
    "lint:fix": "eslint --fix \"./**/*.ts\" && stylelint --fix \"./**/*.scss\"",
    "build:watch": "npm-run-all 'build:lib -- --watch'",
    "build:web": "rollup --config ./rollup.config.web.js",
    "build:lib": "rollup --config ./rollup.config.lib.js",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@cds/city": "^1.1.0",
    "@cds/core": "^5.5.7",
    "lit": "^2.0.0",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.0",
    "@fullhuman/postcss-purgecss": "4.0.3",
    "@open-wc/dev-server-hmr": "0.1.2-next.0",
    "@rollup/plugin-alias": "3.1.2",
    "@rollup/plugin-image": "2.0.6",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.0",
    "@rollup/plugin-replace": "2.4.2",
    "@rollup/plugin-typescript": "8.2.1",
    "@rollup/plugin-virtual": "2.0.3",
    "@skypack/package-check": "0.2.2",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "@web/dev-server": "0.1.17",
    "@web/dev-server-esbuild": "0.2.12",
    "@web/dev-server-import-maps": "^0.0.5",
    "@web/dev-server-rollup": "0.3.4",
    "@web/dev-server-storybook": "0.3.5",
    "@web/storybook-prebuilt": "0.1.20",
    "@web/test-runner": "0.13.4",
    "@web/test-runner-playwright": "0.8.6",
    "autoprefixer": "10.2.5",
    "bundlesize": "1.0.0-beta.2",
    "del-cli": "4.0.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-jasmine": "^4.1.2",
    "eslint-plugin-lit-a11y": "^1.0.1",
    "fs-extra": "^9.1.0",
    "lit-analyzer": "1.2.1",
    "npm-run-all": "^4.1.5",
    "patch-package": "6.4.7",
    "prettier": "^2.2.1",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-delete": "2.0.0",
    "rollup-plugin-minify-html-literals": "1.2.6",
    "rollup-plugin-postcss": "4.0.0",
    "rollup-plugin-shell": "1.0.3",
    "rollup-plugin-styles": "3.14.1",
    "rollup-plugin-sourcemaps": "0.6.3",
    "rollup-plugin-terser": "7.0.2",
    "sass": "1.34.0",
    "source-map-explorer": "2.5.2",
    "ts-lit-plugin": "1.2.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.4",
    "web-component-analyzer": "1.2.0-next.0"
  }
}
