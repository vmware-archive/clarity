{
  "compilerOptions": {
    "outDir": "../../dist/clr-icons",
    "baseUrl": "./",
    "target": "es5",
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "removeComments": false,
    "noImplicitAny": true
  },
  "include": ["typings.d.ts", "**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
