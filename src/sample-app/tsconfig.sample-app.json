{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "outDir": "../../dist/sample-app"
  },
  "files": [
    "app.module.ts",
    "main-aot.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot-compiled",
    "skipMetadataEmit" : true
  }
}
