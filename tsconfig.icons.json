{
    "compilerOptions": {
        "outDir": "./dist/clr-icons",
        "target": "es5",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "removeComments": false,
        "noImplicitAny": true,
        "types": []
    },
    "include": [
        "src/typings.d.ts",
        "src/clr-icons/**/*.ts"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}
