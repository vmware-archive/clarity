{
  "name": "clarity",
  "version": "0.11.18",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vmware/clarity.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "npm run generate-release-notes && ng serve --aot=true --output-hashing=false --port 4202",
    "start:dynamic": "npm run build:dynamic && npm run serve:dynamic",
    "start:static": "npm run build:static && npm run serve:static",
    "build": "ng build",
    "build:client-and-server-bundles": "ng build --prod && ng build --prod --app 1 --output-hashing=false",
    "build:static": "npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:static",
    "build:dynamic": "npm run build:client-and-server-bundles && npm run webpack:server",
    "generate:static": "cd dist && node prerender",
    "generate:deploy": "cd dist && node prerender --deploy",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:static": "cd dist/browser && http-server",
    "serve:dynamic": "node dist/server",
    "generate-release-notes": "node generate-template.js",
    "generate-404": "cat dist/index.html > dist/404.html",
    "deploy": "npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:deploy",
    "deploy:ci": "npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:deploy -- --directory=../../deploy/documentation/v0.11"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.0",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/platform-server": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@clr/angular": "0.11.18-patch.1",
    "@clr/icons": "0.11.18-patch.1",
    "@clr/ui": "0.11.18-patch.1",
    "@webcomponents/custom-elements": "^1.0.4",
    "bootstrap": "^4.0.0-alpha.5",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.4.1",
    "intl": "^1.2.5",
    "jump.js": "^1.0.2",
    "prismjs": "^1.8.3",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "^1.5.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/language-service": "^5.0.0",
    "@nguniversal/express-engine": "^5.0.0-beta.5",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.5",
    "@types/node": "^8.0.30",
    "cpy-cli": "^1.0.1",
    "del": "^3.0.0",
    "fs-extra": "^5.0.0",
    "gh-pages": "^1.1.0",
    "http-server": "^0.10.0",
    "make-dir": "^1.1.0",
    "minimist": "^1.2.0",
    "ora": "^1.3.0",
    "reflect-metadata": "^0.1.10",
    "replace-in-file": "^3.1.0",
    "ts-loader": "^2.3.7",
    "typescript": "^2.4.2",
    "xml-js": "^1.5.2"
  }
}
